@model List<ApplicationUser>
@{

}
<div class="container">
    <div class="col-xs-3">
        <a asp-action="Register" asp-controller="Account" class="btn btn-block btn-success">Opret ny bruger</a>
    </div>
    <div class="col-xs-12">
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {   
                <div class="row">
                    <div class="col-xs-4">
                        <p>@user.Email</p>
                    </div>
                    <div class="col-xs-4"><a asp-action="ManageUserRole" asp-route-id="@user.Id" class="btn btn-primary">Edit Role</a></div>
                </div>
                <br/>
            }
        }
    </div>
</div>

